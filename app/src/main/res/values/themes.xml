<resources>
    <style name="Base.Theme.Thrifty" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="colorButtonNormal">@color/primary_color</item>

        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="boxStrokeColor">@color/primary_color</item>
    </style>

    <style name="LaunchTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <style name="Theme.Thrifty" parent="Base.Theme.Thrifty" />

    <style name="Theme.Thrifty.NoActionBar" parent="Theme.Thrifty">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FabCircle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="thrifty">
        <item name="android:textSize">80sp</item>
        <item name="android:textColor">#9BD829</item>
    </style>
    <style name="email">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2C2C2C</item>
    </style>
    <style name="password">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E1E1E</item>
    </style>
    <style name="enter_password">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#989898</item>
    </style>
    <style name="enter_mail">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#989898</item>
    </style>
    <style name="log_in">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="forgot_pass">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2C2C2C</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/transaction_container</item>
        <item name="android:textAppearance">@style/CustomPopupMenuItemText</item>
    </style>

    <style name="CustomPopupMenuItemText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextInputLayout">
        <item name="boxStrokeColor">@color/primary_color</item>
    </style>

    <style name="PopupText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
